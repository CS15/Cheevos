<?xml version="1.0" encoding="utf-8"?>

<org.relos.cheevos.views.ScrollviewForList xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider"
            android:background="@android:color/white" />

        <RelativeLayout
            android:id="@+id/rl_banner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/primary_color">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/iv_latest_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <org.relos.cheevos.views.MavenProLightBoldTextView
                android:id="@+id/tv_latest_image_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_level_1"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@android:color/white"
                android:textSize="@dimen/tv_level_3"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider"
            android:background="@android:color/white" />

        <org.relos.cheevos.views.ListViewScrollable
            android:id="@+id/lv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="@dimen/divider" />

    </LinearLayout>

</org.relos.cheevos.views.ScrollviewForList>