<?xml version="1.0" encoding="utf-8"?>

<org.cs15.xchievements.views.ScrollviewForList xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_color"
        android:orientation="vertical">

        <org.cs15.xchievements.views.MavenProLightBoldTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:paddingBottom="@dimen/padding_level_2"
            android:paddingTop="@dimen/padding_level_2"
            android:text="@string/favorites"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tv_level_3" />

        <org.cs15.xchievements.views.ListViewScrollable
            android:id="@+id/lv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="@dimen/divider"
            android:background="@android:color/white" />

    </LinearLayout>

</org.cs15.xchievements.views.ScrollviewForList>