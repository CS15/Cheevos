<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawer_item_selector"
    android:orientation="horizontal">
    <!--android:background="@drawable/selectable_background_theme"-->

    <View
        android:id="@+id/iv_selected_item"
        android:layout_width="@dimen/selected_item"
        android:layout_height="match_parent" />
    <!--android:background="@drawable/activated_background" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="20dp">

        <org.relos.cheevos.views.MavenProLightBoldTextView
            android:id="@+id/tv_drawer_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/navigation_drawer_title_size" />
    </LinearLayout>
</LinearLayout>