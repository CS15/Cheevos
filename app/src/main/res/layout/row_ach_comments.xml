<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_button_selector"
    android:padding="@dimen/padding_level_1">

    <org.cs15.xchievements.views.RoundedImageLoader
        android:id="@+id/iv_user_cover"
        android:layout_width="@dimen/user_avatar_size"
        android:layout_height="@dimen/user_avatar_size"
        android:gravity="center_horizontal|center_vertical"
        android:scaleType="centerCrop" />

    <org.cs15.xchievements.views.MavenProLightBoldTextView
        android:id="@+id/tv_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_level_1"
        android:layout_marginRight="@dimen/margin_level_1"
        android:layout_toRightOf="@+id/iv_user_cover"
        android:textColor="@android:color/black"
        android:textSize="@dimen/tv_level_5" />

    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:layout_below="@+id/tv_user_name"
        android:layout_margin="@dimen/margin_level_1"
        android:layout_toRightOf="@+id/iv_user_cover"
        android:background="@android:color/darker_gray" />

    <org.cs15.xchievements.views.MavenProLightBoldTextView
        android:id="@+id/tv_user_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_level_1"
        android:layout_marginRight="@dimen/margin_level_1"
        android:layout_toRightOf="@+id/iv_user_cover"
        android:layout_below="@+id/v_divider"
        android:textColor="@android:color/black"
        android:autoLink="web"
        android:textSize="@dimen/tv_level_6" />

</RelativeLayout>