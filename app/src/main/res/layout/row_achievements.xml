<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activated_item"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_level_0"
    android:paddingLeft="@dimen/padding_level_1"
    android:paddingRight="@dimen/padding_level_1"
    android:paddingTop="@dimen/padding_level_0">

    <org.cs15.xchievements.views.XchievementsImageLoader
        android:id="@+id/iv_ach_cover"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ach_image_size"
        android:background="@color/primary_color"
        android:scaleType="centerCrop" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ach_image_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/primary_gradient_bottom" />

    <LinearLayout
        android:id="@+id/ll_gamerscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/margin_level_1"
        android:layout_marginTop="@dimen/margin_level_1"
        android:orientation="horizontal">

        <org.cs15.xchievements.views.MavenProLightBoldTextView
            android:id="@+id/tv_gamerscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tv_level_5" />

        <ImageView
            android:layout_width="@dimen/gamerscore_logo_size"
            android:layout_height="@dimen/gamerscore_logo_size"
            android:layout_marginLeft="@dimen/padding_level_0"
            android:background="@drawable/ic_gamerscore_logo" />

    </LinearLayout>

    <org.cs15.xchievements.views.MavenProLightBoldTextView
        android:id="@+id/tv_comment_counts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ll_gamerscore"
        android:layout_marginRight="@dimen/margin_level_1"
        android:layout_marginTop="@dimen/margin_level_1"
        android:textColor="@android:color/white"
        android:textSize="@dimen/tv_level_5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_level_1"
        android:paddingLeft="@dimen/padding_level_1"
        android:paddingRight="@dimen/padding_level_1">

        <org.cs15.xchievements.views.MavenProLightBoldTextView
            android:id="@+id/tv_ach_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tv_level_5" />

        <org.cs15.xchievements.views.MavenProLightBoldTextView
            android:id="@+id/tv_ach_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/tv_level_6" />

    </LinearLayout>

</RelativeLayout>