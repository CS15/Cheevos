<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/row_padding">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/iv_cover"
        android:layout_width="@dimen/latest_ach_image"
        android:layout_height="@dimen/latest_ach_image"
        android:scaleType="centerCrop" />

    <org.relos.cheevos.views.MavenProLightBoldTextView
        android:id="@+id/tv_game_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_level_1"
        android:layout_marginRight="@dimen/margin_level_1"
        android:layout_toRightOf="@+id/iv_cover"
        android:textColor="@android:color/white"
        android:textSize="@dimen/tv_level_4" />

    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:layout_below="@+id/tv_game_title"
        android:layout_margin="@dimen/margin_level_1"
        android:layout_toRightOf="@+id/iv_cover"
        android:background="@android:color/white" />

    <org.relos.cheevos.views.MavenProLightBoldTextView
        android:id="@+id/tv_game_ach_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_level_1"
        android:layout_marginRight="@dimen/margin_level_1"
        android:layout_toRightOf="@+id/iv_cover"
        android:layout_below="@+id/v_divider"
        android:textColor="@android:color/white"
        android:textSize="@dimen/tv_level_5" />

</RelativeLayout>