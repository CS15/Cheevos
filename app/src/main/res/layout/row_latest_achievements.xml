<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/row_padding">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/iv_new_ach_image"
        android:layout_width="@dimen/latest_ach_image"
        android:layout_height="@dimen/latest_ach_image"
        android:layout_centerVertical="true"
        android:scaleGravity="top"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/ll_title_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_new_ach_image"
        android:gravity="center">

        <org.relos.cheevos.views.MavenProLightBoldTextView
            android:id="@+id/tv_new_ach_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/row_padding"
            android:layout_weight="2"
            android:maxLines="2"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_level_1"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_title_holder"
        android:layout_margin="@dimen/row_padding"
        android:layout_toRightOf="@+id/iv_new_ach_image"
        android:background="@android:color/darker_gray" />


    <org.relos.cheevos.views.MavenProLightBoldTextView
        android:id="@+id/tv_new_ach_ach_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_divider"
        android:layout_marginLeft="@dimen/row_padding"
        android:layout_toRightOf="@+id/iv_new_ach_image"
        android:singleLine="true"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/text_level_1" />

    <org.relos.cheevos.views.MavenProLightBoldTextView
        android:id="@+id/tv_new_ach_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_new_ach_ach_amount"
        android:layout_marginLeft="@dimen/row_padding"
        android:layout_toRightOf="@+id/iv_new_ach_image"
        android:singleLine="true"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/text_level_1" />

    <org.relos.cheevos.views.MavenProLightBoldTextView
        android:id="@+id/tv_new_ach_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_new_ach_author"
        android:layout_marginLeft="@dimen/row_padding"
        android:layout_toRightOf="@+id/iv_new_ach_image"
        android:singleLine="true"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/text_level_1" />

</RelativeLayout>